<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/surface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    </SurfaceView>
  
    <ImageView
        android:id="@+id/skip_backward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/media_skip_backward"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
    />
    
    <ImageView
        android:id="@+id/skip_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/media_skip_forward"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
    />
    
    <ImageView
        android:id="@+id/playback_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/media_playback_start"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
    />
    
    <ImageView
        android:id="@+id/playback_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/media_playback_pause"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
    />
</RelativeLayout>